@{
    ViewBag.Title = "Gemini Saç Modeli Önerileri";
}

<div style="max-width: 90%; margin: 20px auto; font-family: Arial, sans-serif;">
    <h1 style="text-align: center; color: #4CAF50;">Gemini Saç Modeli Önerileri</h1>

    <form method="post" style="margin-bottom: 20px; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; width: 90%; margin-left: auto; margin-right: auto;">
        <label for="description" style="display: block; margin-bottom: 8px; font-weight: bold;">Açıklama:</label>
        <input type="text" id="description" name="description" placeholder="Örneğin, uzun saç"
               style="width: 100%; padding: 10px; margin-bottom: 12px; border: 1px solid #ddd; border-radius: 4px;"
               required />
        <button type="submit" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;">
            Öneri Al
        </button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div style="color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; padding: 15px; border-radius: 5px; margin-bottom: 20px; width: 90%; margin-left: auto; margin-right: auto;">
            <strong>Hata:</strong> @ViewBag.Error
        </div>
    }

    @if (ViewBag.SuggestionsList != null)
    {
        <div style="padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; width: 90%; margin-left: auto; margin-right: auto;">
            <h2 style="color: #4CAF50; margin-bottom: 16px;">Saç Modeli Önerileri</h2>
            <ul style="list-style-type: none; padding-left: 0;">
                @foreach (var suggestion in ViewBag.SuggestionsList)
                {
                    <li style="margin-bottom: 16px; padding: 12px; border: 1px solid #ddd; border-radius: 8px; background-color: #fff;">
                        @Html.Raw(suggestion.Replace("\n", "<br />"))
                    </li>
                }
            </ul>
        </div>
    }
</div>
